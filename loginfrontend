    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', () => {
            // Form wrappers and switch links
            const loginWrapper = document.getElementById('login-form-wrapper');
            const signupWrapper = document.getElementById('signup-form-wrapper');
            const showSignUpBtn = document.getElementById('showSignUp');
            const showLoginBtn = document.getElementById('showLogin');
            const switchToSignUpText = document.getElementById('switchToSignUp');
            const switchToLoginText = document.getElementById('switchToLogin');

            // --- FORM TOGGLING LOGIC ---
            showSignUpBtn.addEventListener('click', () => {
                loginWrapper.style.display = 'none';
                signupWrapper.style.display = 'block';
                switchToSignUpText.style.display = 'none';
                switchToLoginText.style.display = 'block';
            });

            showLoginBtn.addEventListener('click', () => {
                signupWrapper.style.display = 'none';
                loginWrapper.style.display = 'block';
                switchToLoginText.style.display = 'none';
                switchToSignUpText.style.display = 'block';
            });

            // --- INTERACTIVITY FOR BOTH FORMS ---
            const allPasswordContainers = document.querySelectorAll('.input-container input[type="password"]');

            allPasswordContainers.forEach(passwordInput => {
                const container = passwordInput.parentElement;
                const showHideBtn = container.querySelector('.show-hide-btn');

                if (showHideBtn) {
                    showHideBtn.addEventListener('click', () => {
                        if (passwordInput.type === 'password') {
                            passwordInput.type = 'text';
                            showHideBtn.textContent = 'Hide';
                        } else {
                            passwordInput.type = 'password';
                            showHideBtn.textContent = 'Show';
                        }
                    });
                }
            });

            // --- BUTTON ENABLING/DISABLING LOGIC ---
            // We use ClientID to get the ID generated by ASP.NET
            const txtLoginUsername = document.getElementById('<%= txtLoginUsername.ClientID %>');
            const txtLoginPassword = document.getElementById('<%= txtLoginPassword.ClientID %>');
            const btnLogin = document.getElementById('<%= btnLogin.ClientID %>');

            const txtSignUpEmail = document.getElementById('<%= txtSignUpEmail.ClientID %>');
            const txtSignUpUsername = document.getElementById('<%= txtSignUpUsername.ClientID %>');
            const txtSignUpPhone = document.getElementById('<%= txtSignUpPhone.ClientID %>');
            const txtSignUpPassword = document.getElementById('<%= txtSignUpPassword.ClientID %>');
            const btnSignUp = document.getElementById('<%= btnSignUp.ClientID %>');

            function validateLoginForm() {
                btnLogin.disabled = !(txtLoginUsername.value.trim() && txtLoginPassword.value.trim().length >= 6);
            }

            function validateSignUpForm() {
                btnSignUp.disabled = !(txtSignUpEmail.value.trim() && txtSignUpUsername.value.trim() && txtSignUpPhone.value.trim() && txtSignUpPassword.value.trim().length >= 6);
            }

            // Add listeners to all inputs
            [txtLoginUsername, txtLoginPassword].forEach(el => el.addEventListener('input', validateLoginForm));
            [txtSignUpEmail, txtSignUpUsername, txtSignUpPhone, txtSignUpPassword].forEach(el => el.addEventListener('input', validateSignUpForm));

            // Initial validation check
            validateLoginForm();
            validateSignUpForm();
        });
    </script>
</body>
